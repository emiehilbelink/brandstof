{% extends 'partials/_master.twig' %}

{% block main %}
	<div class="about-us clearfix">
		<div class="about-us-text">
		    <div class="record-title">
		        <h1><span class="underline-this">{{ record.title }}</span></h1>
		    </div>


		    <div class="record-body">
		      <p>  {{ record.body}} </p>
		    </div>
		</div>

		<div class="about-us-image">
			 <div class="image">
                   <img src="{{ image(record.img_body) }}">
             </div>
		</div>
	</div>

{% endblock main %}
