}


.blogs h1{
  text-align: center;
}

.blog-preview{
  width: 30%;
  float:left;
  background-color: white;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  height: 700px;
  margin-left: 2.5%;
}

.blog-img{
  margin-top:5%;
}

.blog-title h4{
  margin:0 auto 1rem;
  max-width: 73%;
  display: block;
}

.blog-body p{
  margin:0 auto 1rem;
  max-width: 73%;
  display: block;
}

.blog-button{
  width: 100%;
}

.blog-seeAll{
  width: 26%; 
  margin-left: 37%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  padding: 1%;
}

.blog-seeAll span{
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.logo-header img{
  width: 40%;
  margin-top: 5%;
}

.logo-header h4{
  text-align: center;
}

.button-header{
  text-align: center;
  padding-top: 2rem;
}

.button-header{
  font-size: 150%;
}

.button-header .button-left{
  background-color: #FD6731 ;
  border-radius: 30px;
  transition: all 0.5s;
  padding: 15px 25px 15px 25px;
}

.button-header .button-right{
  color: #FD6731 ;
  background-color: black;
  border-radius: 30px;
  transition: all 0.5s;
  padding: 15px 40px 15px 40px;
  margin-left:2%;
}

.button-right span {
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button-right span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button-right:hover span {
  padding-right: 25px;
}

.button-right:hover span:after {
  opacity: 1;
  right: 0;
}

.button-left span {
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button-left span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button-left:hover span {
  padding-right: 25px;
}

.button-left:hover span:after {
  opacity: 1;
  right: 0;
}

@media print, screen and (min-width: 40em) {
  h1, h2 {
    margin-bottom: 2rem; }
  img {
    margin: 0 auto 1rem;
    max-width: 80%;
    display: block; } 
  }

@media screen and (max-width: 39.9375em) {
  .no-js .top-bar {
    display: none; 
  } 
  .timer p{
  font-size: 200%;
  }
}


@media print, screen and (min-width: 40em) {
  .no-js .title-bar {
    display: none; } 
}
